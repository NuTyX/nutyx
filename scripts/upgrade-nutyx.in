check_group_exist()
{
	(getent group "${UPGRADE_USER}") && return 0
	return 1
}
check_user_exist()
{
	(getent passwd "${UPGRADE_USER}") && return 0
	return 1
}
create_cards_user()
{
	check_group_exist ${UPGRADE_USER} || groupadd -g 96 ${UPGRADE_USER}
	useradd -c "cards upgrade Service" -m \
	-d ${UPGRADE_HOME}/${UPGRADE_USER} -g 96 -s /bin/sh -u 96 ${UPGRADE_USER}
	
}
check_conf_exist()
{
	[ -f ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF} ] && return 0
	return 1
}
generate_conf()
{
	check_user_exist || create_cards_user
	mkdir -p ${UPGRADE_HOME}/${UPGRADE_USER}/pkg/depot
	echo "version testing
	
url http://localhost

dir ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/gui-extra
dir ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/gui
dir ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/cli-extra
dir ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/cli
dir ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/base
base ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/base" > \
${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF}
	chown -R ${UPGRADE_USER}:${UPGRADE_USER} ${UPGRADE_HOME}/${UPGRADE_USER}
}
download_only()
{
	check_conf_exist || generate_conf
	echo "cards upgrade --download-only --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF}"
	cards upgrade --download-only --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF} \
	|| return 1
	return 0
}
download_ready()
{
	check_conf_exist || generate_conf
	[ -f ${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_DEPOT}/gui-extra/.PKGREPO ] || \
	echo "cards upgrade --ready --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF}"
	cards upgrade --ready --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF} && return 0
	return 1
}
main()
{
	download_ready
	echo "cards upgrade --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF}"
	cards upgrade --conf=${UPGRADE_HOME}/${UPGRADE_USER}${UPGRADE_CARDS_CONF}
	return 0
}

# Global variables
UPGRADE_USER=cards
UPGRADE_HOME=/home
UPGRADE_CARDS_CONF=/pkg/cards.conf
UPGRADE_DEPOT=/pkg/depot

main "$@"
